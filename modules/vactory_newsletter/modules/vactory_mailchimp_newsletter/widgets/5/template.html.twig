<tr>
  <td>
    <table role="presentation" bgcolor="#E1E0E2" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td style="padding:20px 10px">
          <table role="presentation" bgcolor="#FFFFFF" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td style="padding: 20px">
                <div style="text-align: center;">
                  {% if content.0.title is not empty %}
                    <h2 style="font-family: Arial; font-size: 15px; font-weight: 700; line-height: 18px; color: #000000; margin-bottom: 15px; text-align: center;">{{ content.0.title }}</h2>
                  {% endif %}
                  {% if content.0.description is not empty %}
                    <p style="font-family: Arial; font-size: 12px; font-weight: 400; line-height: 18px; letter-spacing: 0px; text-align: center; margin-bottom: 22px;">{{ content.0.description|raw }}</p>
                  {% endif %}
                  {% if content.0.link.url is not empty and content.0.link.title is not empty %}
                    <a href="{{ content.0.link.url }}" style="display: inline-block; padding: 7px 7px; text-align: center; border: 1px solid #D86B4B; background-color: transparent; color: #D86B4B; font-size: 10px; line-height: 14px; font-weight: 700; text-decoration: none;">{{ content.0.link.title }}</a>
                  {% endif %}
                </div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>
